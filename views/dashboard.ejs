<script>
    // Este script cambia la visibilidad del dropdown de Epics
    function EpicToggle(flag) {
        var div = document.getElementById('epicDiv');
        if (div.style.visibility == "hidden"){
            div.style.visibility = "visible";
            ChartAll();
        }
        else {
