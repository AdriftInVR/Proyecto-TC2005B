<script>
    // Este script obtiene el ID de un proyecto que esta siendo consultado
    fetch('/data/project/title/' + 1, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json',
            },
        }).then(result => {
            return result.json();
        }).then(data => {
            document.getElementById('titleHere').innerHTML = data.project.idTicket;
        })
</script>

