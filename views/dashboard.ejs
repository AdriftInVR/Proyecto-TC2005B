                        fill: true,
                        borderColor: 'rgb(24,212,86)',
                        backgroundColor: 'rgba(24,212,86,0.2)'
                    }]
                };

                const configura = {
                    type: 'line',
                    data: APBurnUp,
                    options: {
                        scales:{
                            y: {
                                beginAtZero: true
                            }
                        },
                        plugins: {
                            title: {
                                display: true,
                                text: 'Burn up AP'
                            },
                        },
                        responsive: true,                    
                    } 
                };
                burnupChart = new Chart(buap, configura);
            }, "1400")
        })
    }
    
    
