                        <% tempID++ %>
                    <% } %>
                                       
                </div>
            </div>   
        </div>
        <% }  else { %>
            <div class="flex justify-center items-center">
                <p class="text-5xl">
                    No proyects yet
                </p>
            </div>
        <% } %>      
    </div>


    <!-- NEW PROJECT BUTTON -->
