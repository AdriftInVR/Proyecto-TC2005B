<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs', {
    active: active
}) %>

    <div class="w-main inline-block content center inline-flex flex-col flex-4">
        <div class="flex justify-center">
            <p class="m-8 text-2xl"><%=projectName%></p><!--id="projectName"-->
        </div>

        <!--DATA-->
        <div class="flex justify-around  pt-20">
            <div class="bg-red-200 w-1/2 border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">     
               <% if (datos.length > 0) { %>
                    <div class="overflow-x-auto rounded-lg flex items-center justify-center">
                        <table class="w-full text-sm text-left rounded-lg">
                        <thead class="text-xs uppercase">
                            <tr>
                                <th scope="col" class="basis-1/3 px-8 text-lg">
                                    Co-Workers:
                                </th>
                                <th scope="col" class="basis-1/3 px-8 text-lg">
                                    Agile points:
                                </th>
                                <th scope="col" class="basis-1/3 px-8 text-lg">
                                    Work area
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            
                            <% for (let dato of datos) { %>
                                <tr>
                                    <th scope="row" class="font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                        <%= dato.nombre  %>
                                    </th>
                                    <td class="font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                        <%= dato.puntosAgiles %>
                                    </td>
                                    <td class="font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                        <%= dato.front_back %>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                        </table>
                    </div>
                <% }  else { %>
                    <div class="flex justify-center items-center">
                        <p class="text-5xl">
                            This Project Has No Epics
                        </p>
                    </div>
                <% } %> 
                <button type="button" class="relative w-24 fixed bottom-1.5 inset-x-96 text-white bg-gradient-to-br from-pink-500 to-orange-400 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-pink-200 dark:focus:ring-pink-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">Add</button>
            </div>

            <!--EPICS-->
            <div class="bg-blue-200 w-1/4 border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">    
                <div class="flex-col items-center p-6">
                    <div class="flex flex-row items-stretch">





                        <div class="basis-1/3 px-4 text-lg flex-1"><br>
                             <button type="button" class=" bottom-56 right-28 text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 flex-1">Add</button>
                        </div>


                    </div>
                </div>
            </div>
        </div>

        <div class="fixed bottom-16 right-28">
            <button type="button" class="text-white bg-gradient-to-br from-blue-600 to-red-600 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-pink-200 dark:focus:ring-pink-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">Edit</button>
        </div>


    </div>
<%- include('partials/endHTML.ejs') %>